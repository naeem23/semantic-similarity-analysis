using Xunit;
using TextSimilarity;

namespace TextSimilarityTests
{
    public class SimilarityTests
    {
        [Fact]
        public void TestCosineSimilarity_CalculatesCorrectSimilarity()
        {
            // Arrange
            float[] vector1 = { 1, 2, 3 };
            float[] vector2 = { 4, 5, 6 };
            double expectedSimilarity = 0.9746318461970762;  // Pre-calculated similarity for these vectors
  // Act
            var result = Program.CosineSimilarity(vector1, vector2);

            // Assert
            Assert.Equal(expectedSimilarity, result, 6); // Allow 6 decimal places of precision
        }
    }
}
